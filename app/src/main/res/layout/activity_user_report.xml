<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UserReport">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            app:tint="@color/tertiary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/adamina"
            android:text="@string/submit_report"
            android:textColor="@color/tertiary"
            android:textSize="30sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/topicTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic"
            android:textColor="@color/text"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/topicReportInput"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/text"
            android:layout_marginTop="5dp"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/text"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/descriptionReportInput"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_black"
            android:inputType="textMultiLine"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="top|start"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text"
            android:layout_marginTop="5dp"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_media"
            android:fontFamily="@font/adamina"
            android:textColor="@color/text"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/uploadMediaButton"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="15dp"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/uploadMediaImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_image_24"
                app:tint="@color/tertiary" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:textColor="@color/text"
            android:text="@string/submit_anonymously"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/adamina"
        android:background="@drawable/button"
        android:text="@string/submit"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp" />

</androidx.appcompat.widget.LinearLayoutCompat>